<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TestNG OpenCart Regression Suite" verbose="4"
	thread-count="4" parallel="tests">


	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.AllureReportListener" />
					<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
	</listeners>



	<test name="OPencart Login Page Test">
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="OPencart Account Page Test">
		<classes>
			<class name="com.qa.opencart.tests.AccountPageTest" />
		</classes>
	</test>

	<test name="OPencart Product Page Test">
		<classes>
			<class name="com.qa.opencart.tests.ProductPageTest" />
		</classes>
	</test>

<!--  	<test name="OPencart Register Page Test">
		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest" />
		</classes>
	</test> -->
	




</suite>